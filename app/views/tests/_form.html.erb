<%= nested_form_for @test do |f| %>
  <div>
    <% if @test.errors.any? %>
      <ul>
      <% @test.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    <% end %>
  </div>

  <div class="field"><%= f.label :name %>: <%= f.text_field :name %></div>
  <div class="field"><%= f.label :description %>: <%= f.text_field :description %></div>
  <div class="field">
    <%= f.label :room_id %>: <%= f.select(:room_id, options_from_collection_for_select(Room.all, :id, :name)) %>
  </div>

  <%= f.fields_for :questions do |builder| %>
    <%= render "question_fields", f: builder %>
  <% end %>

  <p><%= f.link_to_add "Add Question", :questions %></p>

  <div class='field'><%= f.label :min_shewn_questions %>: <%= f.text_field :min_shewn_questions %></div>
  <div class='field'><%= f.label :max_shewn_questions %>: <%= f.text_field :max_shewn_questions %></div>
  <div class='field'><%= f.label :time_for_passing %>: <%= f.text_field :time_for_passing %></div>

  <div class="actions">
    <%= f.submit id: 'test-submit' %>
  </div>
<% end %>