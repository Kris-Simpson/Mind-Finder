<% if @success %>
  <% content_for :breadcrumbs do %>
    <li><%= link_to 'My tests', tests_path %> <span>/</span></li>
    <li><%= link_to @test.name, @test %> <span>/</span></li>
    <li class='active'>Edit</li>
  <% end %>

  <% content_for :headline_title do %>
    Editing <%= @test.name %>
  <% end %>

  <%= render 'form' %>
<% else %>
  <% content_for :breadcrumbs do %>
    <li class='active'>Not my test /</li>
  <% end %>

  <% content_for :headline_title do %>
    Can't edit test
  <% end %>

  <div class='alert alert-error'>This test does not belong to you! You can not edit it!</div>

  <%= link_to 'Back', :back %>
<% end %>