<%= content_for :breadcrumbs do %>
  <li class='active'>Profiles</li>
<% end %>

<%= content_for :headline_title do %>
  All users
<% end %>

<% if @users.any? %>
  <%= form_tag users_path, method: 'get', class: 'form-search', remote: true do %>
    <%= text_field_tag :search, params[:search], autocomplete: 'off', autofocus: true, placeholder: 'Search here...', class: 'search-query input-xlarge' %>
    <%= button_tag type: 'submit', class: 'btn' do %>
      <i class='icon-search'></i> Search
    <% end %>
  <% end %>
  
  <div id='users'><%= render 'users' %></div>
<% else %>
  <h4>There are no users, yet</h4>
<% end %>

<%= link_to 'Back', :back %>