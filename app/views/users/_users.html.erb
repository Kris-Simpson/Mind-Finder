<script type="text/javascript">
  $(function() {
    changePagination();
    tablePadding();
  });
</script>

<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>

<table class='table table-bordered table-striped table-link table-hover'>
  <thead>
    <tr>
      <th>ID</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Created at</th>
    </tr>
  </thead>
  
  <tbody>
    <% @users.each do |user| %>
      <% unless current_user == user %>
        <tr>
          <td width='8%' class='cell-center'><%= user.id %></td>
          <td><%= link_to user.first_name, user unless user.first_name.blank? %></td>
          <td width='20%'><%= link_to user.last_name, user unless user.last_name.blank? %></td>
          <td width='30%'><%= link_to user.email, user %></td>
          <td width='22%' style='text-align: center;'><%= user.created_at %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<%= will_paginate @users %>