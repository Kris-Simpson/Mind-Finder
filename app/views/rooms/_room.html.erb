<div class="block" id="room_<%= room.id %>">
  <%= link_to room.name, room, class: "name", remote: true %>

  <div id='actions'>
    <%= link_to 'Edit', edit_room_path(room), class: "edit_link", remote: true %>
    <%= link_to 'Destroy', room, method: :delete, data: { confirm: "Are you sure you want to delete this room?\nTests that belongs to this room also be deleted!" }, class: "destroy_link", remote: true %>
  </div>

  <div id='information'>
  Path: <span class='path'>
              <% room = Room.find(room.id) %>

              <% unless room.ancestors.any? %>
              /
              <% end %>
              <% room.ancestors.each do |page| %>
                <%= page.name %> /
              <% end %>
          </span>
  </div>
</div>