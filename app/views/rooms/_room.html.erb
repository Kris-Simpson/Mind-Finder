<div class="block" id="room_<%= room.id %>">
  <%= link_to room.name, room, class: "name", remote: true %>
  <div>
    <%= link_to 'Edit', edit_room_path(room), class: "edit_link", remote: true %>

    <% unless room.is_main %>
      <%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure you want to delete this room?' }, class: "destroy_link", remote: true %>
    <% end %>
  </div>
</div>