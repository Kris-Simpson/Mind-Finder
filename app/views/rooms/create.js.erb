<% if @room.valid? %>
  $('.cancel-button').click();

  $('.row-fluid .span6 h4').slideUp(200);
  $('.form-search').slideDown(200);

  $('#submenu').parent().find('p').slideUp(200);
  $('#submenu').empty().append("<%= j render 'shared/submenu' %>").tree();
  
  $('#created_rooms').empty().append('<%= j render "shared/content_table", content: current_user.rooms.page(params[:page]), model_name: "rooms" %>').css({'display' : 'block'});
  
  $('.information').popover();
<% else %>
  $('#new_room').replaceWith("<%= j render 'form', title: 'New room' %>")
<% end %>