<%= form_for(@room, remote: true) do |f| %>
  <script>
    $(function() {
      $("#edit_room_<%= @room.id %> a#cancel_link").click(function() {
        $("#edit_room_<%= @room.id %>").remove();
        $("#room_<%= @room.id %>").show();
      });

      $("#new_room a#cancel_link").click(function() {
        $("#new_room").remove();
        $("#new_room_link").show();
      });
    });
  </script>

  <%= f.label :name %>: <%= f.text_field :name, class: 'i-blue i-medium' %><br />
  <%= f.label :description %>: <%= f.text_field :description, class: 'i-blue i-medium' %><br />

  <% unless @room.is_main %>
    <%= f.label :parent_id %>: <%= f.select(:parent_id, options_from_collection_for_select(Room.all, :id, :name)) %>
  <% end %>

  <div class="actions">
    <%= f.submit class: "button b-blue b-medium" %>
    <a id="cancel_link" class="link b-link-blue">Cancel</a>
  </div>
<% end %>
