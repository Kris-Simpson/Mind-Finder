<% if @room.valid? %>
  $("#edit_room_<%= @room.id %>").slideUp(200);
  $("#room_<%= @room.id %>").hide().after("<%= j render @room %>").remove();
  $('#room_<%= @room.id %>').hide().delay(200).slideDown(200);
  
  setTimeout(function() {
    $("#edit_room_<%= @room.id %>").remove();
  }, 200);

  $('#submenu').empty().append("<%= j render 'shared/submenu' %>").tree();
<% else %>
  $('#edit_room_<%= @room.id %>').replaceWith("<%= j render('form') %>");
<% end %>