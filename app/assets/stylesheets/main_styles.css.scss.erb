#trap {
  color: #554343;     /* trap for hosting heroku.com. not use in the app. */
}

$dark_brown: #37464F;
$navigation_bar_width: 60px;

html, body {
  height: 100%;
}

#minus, #plus {
	width: 20px;
	height: 20px;
	text-align: center;
	border-radius: 10px;
	border: 0;
	background-color: #000;
	color: #fff;
	
	&:hover {
		cursor: pointer;
	}
}

#navigation_bar {
	width: 90%;
	height: $navigation_bar_width;
	left: 5%;
	top: 0;
	position: fixed;
	border-bottom: 1px solid #d6d6d6;
	background-color: white;
	z-index: 10000;

	img {
		margin-left: 20px;
		margin-top: 20px;
	}
	
	.menu {
	  float: right;
	  margin-right: 20px;
	  margin-top: 20px;
	  
	  a {
		  font-size: 12px;
		  color: #ABABAB;
		  text-decoration: none;
		  text-transform: uppercase;
		  letter-spacing: 1px;
			
		  &:hover {
		    color: $dark_brown;
		  }
		}
	
	  li {
	    display: inline;
	    padding-left: 25px;
	  }
	
	  .active {
	    a {
		    color: $dark_brown;
	    }
	  }
	  
	  .select_lang {
	    float: right;
	    margin-left: 25px;
	    border-left: 1px solid #d6d6d6;

	   /* @media all and (-webkit-min-device-pixel-ratio:0) {
		    margin-top: -20px;
		  }*/
	  }
  }
}

$left_width: 160px;
$left_margin_right: 10px;
$headline_title_margin_left: 55px;
$content_padding_left: 15px;

#middle {
	margin: $navigation_bar_width 5% 0 5%;
	height: 100%;
	
	#breadcrumbs {
		font-size: 14px;
		padding: 10px 0;
		padding-left: $left_width + $left_margin_right;
 		margin-bottom: 10px;
		border-bottom: 1px solid #d6d6d6;

		ul li {
			display: inline;

			a {
				color: #0096FF;
				text-decoration: none;
			    
		    &:hover {
		    	color: #0571BE;
		      text-decoration: underline;
		      cursor: pointer;
		    }
		  }

			span {
				color: #d6d6d6;
			}

			&.active {
				color: #939393;
			}
  	}
	}

  #left {
    overflow: auto;
  	font-size: 14px;
    width: $left_width;
    margin-right: $left_margin_right;
  	float: left;

  	span.empty-menu {
  		font-family: Ubuntu-Italic;
  		font-size: 12px;
  		color: #777;

  		em {
  			color: $dark_brown;
  		}
  	}
  }

  #right {
  	overflow: hidden;

	  #headline {
	    overflow: hidden;
	    border-left: 1px dashed #d6d6d6;
	  	
	  	#title {
	  		float: left;
	  		font-size: 20px;
		  	margin-left: $headline_title_margin_left;
		  	color: $dark_brown;

		  	span {
		  		color: grey;
		  	}
		  }

		  #current_user {
		  	font-size: 14px;
				color: $dark_brown;
				float: right;

				span {
				  font-family: Ubuntu-Bold;
				}
				
				a {
				  float: right;
				}
		  }
		}

	  #content {
	  	padding: 10px 0 0 $content_padding_left;
	  	border-left: 1px dashed #d6d6d6;

	  	.empty-blocks {
	  		font-size: 18px;
	  		color: $dark_brown;
	  		margin-left: $headline_title_margin_left - $content_padding_left;
	  	}

	  	.block {
	  		padding: 5px;
	  		padding-top: 10px;
	  		border-bottom: 1px dashed #d6d6d6;

	  		&:hover {
	  			border-bottom-style: solid;
	  			background-color: #fafafa;

	  			div#actions {
	  				border-left-style: solid;
	  			}
	  		}

	  		a {
	  			color: $dark_brown;
	  			text-decoration: none;
	  		}

	  		div {
	  			float: right;
	  			text-transform: uppercase;
	  			letter-spacing: 1px;
	  			font-size: 14px;
	  		}

	  		div#actions {
	  			border-left: 1px dashed #d6d6d6;
	  			padding-left: 15px;
	  		}

	  		div#information {
	  			color: $dark_brown;
	  			opacity: 0.7;

	  			span {
	  				margin-right: 30px;

	  				&:last-child {
	  					margin-right: 15px;
	  				}
	  			}

	  			.good {
	  				color: #008FD5;
	  			}

	  			.bad {
	  				color: #980808;
	  			}

	  			.path {
	  				color: #191919;
	  				margin-right: 0;
	  			}
	  		}

	  		.name {
	  			font-size: 18px;
	  		}

	  		.edit_link {

	  		}

	  		.destroy_link {
	  			margin-left: 5px;
	  			color: #980808;
	  		}
	  	}
	  }
	}
}